include templates/head
include block/header/header
include block/forms/input/input
include block/forms/dropdown/dropdown
include block/forms/double-date-range/double-date-range
include block/forms/checkbox-list/checkbox-list
include block/forms/radiobutton-list/radiobutton-list
include block/forms/toggle/toggle
include block/forms/like-button/like-button
include block/forms/rate-button/rate-button
-
  const selectOptions = {
    data : [
      {
        value: '',
        label: 'Сколько гостей'
      },
      {
        value: '',
        label: 'Сколько гостей'
      },
    ]
  }
  const doubleDateRange = {
    first: {
      label: 'date Dropdown',
      placeholder: 'ДД.ММ.ГГГГ',
      value: ''
    },
    second: {
      label: 'date Dropdown',
      placeholder: 'ДД.ММ.ГГГГ',
      value: '19.08.2019'
    },
  }
  const checkboxList = {
    label: 'Checkbox Buttons',
    items: [
      {label: 'Можно курить'},
      {label: 'Можно с питомцами'},
      {label: 'Можно пригласить гостей (до 10 человек)'},
    ],
  }
  const radioButtons = {
    label: 'Radio Buttons',
    name: 'sex',
    items: [
      {label: 'Мужчина', value: 'men'},
      {label: 'Женщина', value: 'women'},
    ],
  }
  const toggle = {
    label: 'Toggle',
    items: [
      {label: 'Получать спецпредложения', checked: true},
      {label: 'Получать спецпредложения'},
    ],
  }
doctype html
html
  +head({title: 'form_elements', page: 'form_elements'})
  body.form-elements
      header.form-elements__header
        include block/ui-header/ui-header
      .form-elements__content
        .form-elements__content-column
          .form-elements__input
            +input({label: 'Text field', state: 'Default',placeholder:'Email'})
          .form-elements__input
            +input({label: 'Text field', state: 'Hover / Focus', value:'This is pretty awesome', modificatorFocus: true})
          .form-elements__input
            .form-elements__input-header
              .form-elements__input-header-label.cta-text Dropdown
              .form-elements__input-header-state Default
            .form-elements__input-item
              +dropdown(selectOptions)
          .form-elements__input
            .form-elements__input-header
              .form-elements__input-header-label.cta-text masked text field
              .form-elements__input-header-state Default
            .form-elements__input-item
              +input({placeholder: 'ДД.ММ.ГГГГ', dateMask: true})
          .form-elements__input-double-date-range
            +double-date-range(doubleDateRange)
          .form-elements__input-datepicker-range
            +input({label:'filter date dropdown', expandMoreArrow: true, placeholder:'ДД.ММ.ГГГГ', value:'19 авг - 23 авг', datepickerRange: true})
          .form-elements__input
            .form-elements__input-header
              .form-elements__input-header-label.cta-text subscription text field
            .form-elements__input-item-subscribe
              +input({placeholder: 'Email', forwardArrow: true})
        .form-elements__content-column
          .form-elements__checkbox-list
            +checkbox-list(checkboxList)
          .form-elements__radiobutton-list
            +radiobutton-list(radioButtons)
          .form-elements__toggle-list
            .form-elements__input-header.form-elements_input-header-toogle
              .form-elements__input-header-label.cta-text Toggle
            .form-elements__input.form-elements_input-toogle
              +toggle({label: 'Получать спецпредложения', checked: true})
            .form-elements__input
              +toggle({label: 'Получать спецпредложения'})
          .form-elements__like-button
            .form-elements__input-header
              .form-elements__input-header-label.cta-text like button
            .form-elements__like-button-items
              .form-elements__like-button-item
                +like-button({value: 2})
              .form-elements__like-button-item
                +like-button({value: 12, isVoted: true})
          .form-elements__input
            .form-elements__input-header
              .form-elements__input-header-label.cta-text rate button
            .form-elements__input
              +rate-button({value: 4})
            .form-elements__input
              +rate-button({value: 4})
        .form-elements__content-column
        .form-elements__content-column
